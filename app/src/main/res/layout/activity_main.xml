<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="117dp" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="87dp"
        android:layout_height="86dp"
        android:text="C"
        app:layout_constraintRight_toLeftOf="@+id/btnPercent"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintBottom_toTopOf="@+id/btn7" />

    <Button
        android:id="@+id/btnPlusMinus"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="+/-"
        app:layout_constraintRight_toLeftOf="@+id/btnDivide"
        app:layout_constraintLeft_toRightOf="@+id/btnPercent"
        app:layout_constraintBottom_toBottomOf="@+id/btnPercent"
        app:layout_constraintTop_toTopOf="@+id/btnPercent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintDimensionRatio="h,1:1" />

    <Button
        android:id="@+id/btnPercent"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="%"
        app:layout_constraintRight_toLeftOf="@+id/btnPlusMinus"
        app:layout_constraintLeft_toRightOf="@+id/btnClear"
        app:layout_constraintTop_toTopOf="@+id/btnClear"
        app:layout_constraintBottom_toBottomOf="@+id/btnClear"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintDimensionRatio="h,1:1" />

    <Button
        android:id="@+id/btnDivide"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="÷"
        app:layout_constraintTop_toTopOf="@+id/btnPlusMinus"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/btnPlusMinus"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintRight_toRightOf="@+id/textView5"
        app:layout_constraintBottom_toTopOf="@+id/btnMult" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:text="0"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="7"
        app:layout_constraintBottom_toBottomOf="@+id/btnMult"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="@+id/btnClear"
        app:layout_constraintRight_toLeftOf="@+id/btn8"
        app:layout_constraintTop_toTopOf="@+id/btnMult"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="8"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintLeft_toRightOf="@+id/btn7"
        app:layout_constraintRight_toLeftOf="@+id/btn9"
        app:layout_constraintTop_toTopOf="@+id/btn7"
        app:layout_constraintBottom_toTopOf="@+id/btn4" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="9dp"
        android:text="9"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintLeft_toRightOf="@+id/btn8"
        app:layout_constraintRight_toLeftOf="@+id/btnMult"
        app:layout_constraintTop_toTopOf="@+id/btn8"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintBottom_toTopOf="@+id/btn5" />

    <Button
        android:id="@+id/btnMult"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="×"
        app:layout_constraintBottom_toBottomOf="@+id/btn9"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintLeft_toRightOf="@+id/btn9"
        app:layout_constraintRight_toRightOf="@+id/btnDivide"
        app:layout_constraintTop_toTopOf="@+id/btn9"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="4"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="@+id/btn7"
        app:layout_constraintRight_toLeftOf="@+id/btn5"
        app:layout_constraintTop_toBottomOf="@+id/btn7"
        app:layout_constraintBottom_toBottomOf="@+id/btnPlus" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="5"
        app:layout_constraintBottom_toBottomOf="@+id/btn4"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintLeft_toRightOf="@+id/btn4"
        app:layout_constraintRight_toLeftOf="@+id/btn6" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="6"
        app:layout_constraintLeft_toRightOf="@+id/btn5"
        app:layout_constraintRight_toLeftOf="@+id/btnPlus"
        app:layout_constraintTop_toTopOf="@+id/btn5"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintBottom_toBottomOf="@+id/btn5"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="+"
        app:layout_constraintLeft_toRightOf="@+id/btn6"
        app:layout_constraintTop_toTopOf="@+id/btn6"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintRight_toRightOf="@+id/btnMult"
        app:layout_constraintBottom_toBottomOf="@+id/btn6"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnZero"
        android:layout_width="185dp"
        android:layout_height="90dp"
        android:text="0"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintRight_toLeftOf="@+id/btnDot"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn4"
        tools:layout_editor_absoluteY="387dp" />

    <Button
        android:id="@+id/btnDot"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="▪"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintLeft_toRightOf="@+id/btnZero"
        app:layout_constraintRight_toLeftOf="@+id/btnEquals"
        app:layout_constraintTop_toTopOf="@+id/btnZero"
        android:layout_marginTop="-6dp" />

    <Button
        android:id="@+id/btnEquals"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="="
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintLeft_toRightOf="@+id/btnDot"
        app:layout_constraintTop_toTopOf="@+id/btnZero"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/btnPlus" />

</android.support.constraint.ConstraintLayout>